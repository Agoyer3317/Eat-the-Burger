<div class='container'>
    <div class='row'>
        <div class='col-lg-12 text-center' id='top-bar'>
            <h1>Eat the Burger</h1>
        </div>
        <div class='col-lg-12 text-center task'>
            <div class='row'>
                {{#each burger_data}}
                    {{#unless this.devoured}}
                <div class="col-lg-9 text-center">
                    <pre>{{this.id}} , {{this.burger_name}}</pre>
                </div>
                {{/unless}}
                {{/each}}
            <div class="col-lg-3 text center">
                <form method="POST" action="/burgers/updates?_method=PUT" class='button-size'>
                <input type="hidden" name='burger_id' type='text' value='{{this.id}}'>
                <br>
                <button type='submit' class='btn btn-default'>Devour It</button>
                </form>
            </div>
            {{!-- cloese col-lg-3 --}}
            </div>
            {{!-- closes row --}}
        </div>
        {{!-- closes col --}}
    </div>
    {{!-- closes row --}}
</div>
{{!-- closes container --}}
